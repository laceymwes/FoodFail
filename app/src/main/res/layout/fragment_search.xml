<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context="com.mweslacey.city.foodfail.controller.SearchFragment">

  <EditText
    android:id="@+id/facility_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:queryHint="Facility Name"
    android:elevation="24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/search_recycler_view"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/search_recycler_view"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/facility_search"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
