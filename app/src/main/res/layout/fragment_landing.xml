<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context="com.mweslacey.city.foodfail.controller.LandingFragment">

  <ImageView
    android:id="@+id/landing_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/temp_log_60dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/landing_header"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <TextView
    android:id="@+id/landing_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/HeaderStyle"
    app:layout_constraintTop_toBottomOf="@id/landing_logo"
    app:layout_constraintBottom_toBottomOf="@+id/landing_body"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="@string/landing_header"
    tools:text="Food Fail"/>

  <TextView
    android:id="@+id/landing_body"
    style="@style/BodyStyle"
    app:layout_constraintTop_toBottomOf="@id/landing_header"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="@string/landing_body"/>

</android.support.constraint.ConstraintLayout>
